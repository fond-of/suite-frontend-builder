{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "es6",
        "lib": [
            "es2017"
        ]
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
